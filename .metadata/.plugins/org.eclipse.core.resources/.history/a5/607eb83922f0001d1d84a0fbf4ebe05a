  endpoint:
    shutdown:
      enabled: true
  endpoints:
    web:
      base-path: /olx-monitor
      exposure:
        include: '*'
server:
  port: 7000
spring:
  application:
    name: auth-service
  datasource:
    driver-class-name: com.mysql.cj.jdbc.Driver
    password: root
    url: jdbc:mysql://localhost:3306/olxuserdb
    username: root
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
   
