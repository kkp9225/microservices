eureka:
  client:
    register-with-eureka: true
    fetch-registry: true
  instance:
    hostname: localhost
    instance-id: ${spring.application.name}:${random.uuid}
    
server:
  port: 9191

spring:
  application:
    name: API-GATEWAY
  cloud:
    gateway:
      discovery:
        locator:
          enabled: true
          lowerCaseServiceId: true
      routes:
      - id: LOGIN-SERVICE
        uri: http://localhost:7001/
        predicates:
        - Path=/users/**
      - id: ADVERTISE-SERVICE
        uri: http://localhost:9001/
        predicates:
        - Path=/olx-adv/**
    